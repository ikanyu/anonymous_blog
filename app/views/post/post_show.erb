<div class="container">
  <table style="width:100%">
  	<tr>
  		<td style="width:20%"><b>Post Title</b></td>
  		<td style="width:70%"><b>Post Content</b></td>
  		<td style="width:10%"><b>Post ID</b></td>
  	</tr>
  	<tr>
  		<td style="width:20%"><%= @post.title %></td>
  		<td style="width:70%"><%= @post.content %></td>
  		<td style="width:10%"><%= @post.id %></td>
  	</tr>
  </table>

   <form action= "/posts/<%= @post.id %>/delete" method= "post">
    <input type= "submit" value= "Delete Post">
  </form>
</div>